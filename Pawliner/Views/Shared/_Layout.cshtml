<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="navbar-brand">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Pawliner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown" aria-expanded="true">Profile</a>
                        <div class="dropdown-menu">
                            <div id="loginBlock">
                                <form class="px-1 py-3">
                                    <div class="dropdown-item form-group">
                                        <input type="text" id="usernameLogin" class="form-control" placeholder="Login">
                                    </div>
                                    <div class="dropdown-item form-group">
                                        <input type="password" id="passwordLogin" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="dropdown-item form-group">
                                        <button type="submit" id="submitLogin" class="btn btn-primary btn-block btn-flat">Sign in</button>
                                    </div>
                                </form>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">I forgot my password</a>
                                <a class="dropdown-item" href="#" id="registerButton">Register a new account</a>
                            </div>

                            <div id="registerBlock" style="display: none">
                                <form class="px-1 py-3">
                                    <div class="dropdown-item form-group">
                                        <input type="text" class="form-control" id="login" placeholder="Login">
                                    </div>
                                    <div class="dropdown-item form-group">
                                        <input type="email" class="form-control" id="email" placeholder="Email">
                                    </div>
                                    <div class="dropdown-item form-group">
                                        <input type="password" class="form-control" id="password" placeholder="Password">
                                    </div>
                                    <div class="dropdown-item form-group">
                                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm password">
                                    </div>
                                    <div class="dropdown-item form-group">
                                        <button type="submit" id="submitRegister" class="btn btn-primary btn-block btn-flat">Sign in</button>
                                    </div>
                                </form>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" id="loginButton">Already have account?</a>
                            </div>
                            <div id="userInfoBlock" style=" display: none">
                                <form class="px-1 py-3">
                                    <div class="dropdown-item" form-group>
                                        <a href="/Home/UserProfile"><span class="label-primary" id="username"></span></a>
                                    </div>
                                    <div class="dropdown-divider"></div>
                                    <div class="dropdown-item form-group">
                                        <button type="submit" id="logout" class="btn btn-primary btn-block btn-flat">Log out</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-8">

                @RenderBody()

                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                        <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>
            </div>

            <div class="col-md-4">

                <div class="card my-4">
                    <h5 class="card-header">Search</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" />
                            <span class="btn-primary">
                                <button class="btn btn-secondary" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card my-4">
                    <h5 class="card-header">Categories</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#">For house</a>
                                    </li>
                                    <li>
                                        <a href="#">Computer's help</a>
                                    </li>
                                    <li>
                                        <a href="#">Education</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <hr />

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Pawliner @DateTime.Now.Year</p>
        </div>
    </footer>

    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/pawliner.js")
    @RenderSection("scripts", required: false)
</body>
</html>
